# EditorConfig is awesome: https://EditorConfig.org

# top - most EditorConfig file
root = true

# Unix - style newlines with a newline ending every file
[*]
charset = utf - 8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true

# JS - SASS / SCSS - Vuejs
[*.{js,sass,css,scss,vue}]
indent_size = 2
trim_trailing_whitespace = true
